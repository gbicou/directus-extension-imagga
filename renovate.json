{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "addLabels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "directus",
      "matchPackageNames": ["@directus/**"]
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
